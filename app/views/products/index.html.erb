<div class="btn-group">
  <button type="button" class="btn btn-default dropdown-toggle"
    data-toggle="dropdown"><%= t "product.order_by" %><span class="caret"></span>
  </button>
  <ul class="dropdown-menu" role="menu">
    <li><%= link_to t("product.asc_by_name"), products_path(type: :asc_by_name) %></li>
    <li><%= link_to t("product.asc_by_price"), products_path(type: :asc_by_price) %></li>
    <li><%= link_to t("product.desc_by_name"), products_path(type: :desc_by_name) %></li>
    <li><%= link_to t("product.desc_by_price"), products_path(type: :desc_by_price) %></li>
  </ul>
</div>
<div class="content_grid">
  <% @products.each do |product| %>
  <div class="col_1_of_3 span_1_of_3">
    <div class="view view-first">
      <div class="inner_content clearfix">
        <div class="product_image">
          <%= link_to product_path(product) do %>
            <%= image_tag product.image.url if product.image? %>
          <% end %>
          <div class="mask">
            <div class="info"><%= t "product.quick_view" %></div>
          </div>
          <div class="product_container">
            <div class="cart-left">
              <p class="title"> <%= product.name %></p>
            </div>
            <div class="price"><%= number_to_currency product.price %></div>
            <div class="clearfix"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>
<%= will_paginate @products %>
